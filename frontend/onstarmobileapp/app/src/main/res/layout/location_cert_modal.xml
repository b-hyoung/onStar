<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000"
    android:gravity="center">

    <!-- 모달 카드 -->
<androidx.cardview.widget.CardView
android:layout_width="380dp"
android:layout_height="600dp"
android:layout_gravity="center"
android:radius="16dp"
android:elevation="6dp"
android:background="@android:color/white">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- 상단 타이틀 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="실시간 명소 인증"
        android:letterSpacing="0.1"
        android:textColor="#FF9800"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center" />

    <!-- 이미지 등록 프레임 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_background_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="40sp"
            android:textColor="#bebebe"
            android:layout_gravity="center" />
    </FrameLayout>

    <!-- 장소명 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="춘향루 달빛바다"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginTop="14dp"
        android:layout_gravity="center_horizontal" />

    <!-- 주소 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전라남도 남원시 춘향동 오동로 131-2"
        android:textSize="13sp"
        android:textColor="#888888"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        >

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_heart"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:id="@+id/likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E53935"
            android:textSize="12sp"
            android:layout_marginEnd="12dp"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_people"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:id="@+id/viewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1976D2"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <!-- 위치 인증 완료 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/wh_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 위치 인증 완료"
            android:textStyle="bold"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- 메모 입력 -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:hint="다녀온 후기를 남겨주세요 ^^"
        android:background="@drawable/edit_text_background"
        android:padding="10dp"
        android:gravity="top|start"
        android:textSize="13sp" />
    <!-- 해시태그 입력 -->
    <EditText
        android:id="@+id/hashtagInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="#해시태그를 입력해주세요!"
        android:background="@android:color/transparent"
        android:textColor="#FF4444"
        android:textSize="13sp"
        android:inputType="text"
        android:padding="8dp"
        android:maxLines="2"
        />

    <!-- 등록하기 버튼 -->
   <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="#FF9800 "
        android:text="인증 완료 !"
        app:cornerRadius="10dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="15sp" />

</LinearLayout>
</androidx.cardview.widget.CardView>

</FrameLayout>
