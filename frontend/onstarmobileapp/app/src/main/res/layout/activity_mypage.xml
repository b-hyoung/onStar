<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- 프로필 이미지 -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_profile_default"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp" />

        <!-- 이름 -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김 밥 님"
            android:textStyle="bold"
            android:letterSpacing="0.2"
            android:textSize="18sp"
            android:textColor="#000000" />

        <!-- 이메일 -->
        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="example@gmail.com"
            android:textSize="13sp"
            android:textColor="#888888"
            android:layout_marginBottom="16dp" />

        <!-- 통계 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="7" android:textSize="15sp" android:textStyle="bold" android:textColor="#000" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Given Likes" android:textSize="12sp" android:textColor="#888" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="15" android:textSize="15sp" android:textStyle="bold" android:textColor="#000" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="My Posts" android:textSize="12sp" android:textColor="#888" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="21" android:textSize="15sp" android:textStyle="bold" android:textColor="#000" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Likes" android:textSize="12sp" android:textColor="#888" />
            </LinearLayout>
        </LinearLayout>

        <!-- 메뉴 리스트 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@android:color/transparent"
            android:showDividers="middle"
            android:dividerPadding="12dp">

            <include layout="@layout/item_menu" android:id="@+id/menu_stats" />
            <include layout="@layout/item_menu" android:id="@+id/menu_like" />
            <include layout="@layout/item_menu" android:id="@+id/menu_location" />
            <include layout="@layout/item_menu" android:id="@+id/menu_setting" />
            <include layout="@layout/item_menu" android:id="@+id/menu_contact" />
        </LinearLayout>

        <!-- ⬇ 여기에 위치 -->

    </LinearLayout>
</ScrollView>
    <!-- 하단 고정 Footer -->
    <include
        android:id="@+id/footer_layout"
        layout="@layout/foot_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>