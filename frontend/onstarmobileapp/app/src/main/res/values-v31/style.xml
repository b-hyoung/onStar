<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
    </style>
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>

    </style>

    <!-- 이미지 라운드 주기 -->
    <style name="RoundedImageStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <!-- 지도 모달 다이얼로그 -->
    <style name="ModalDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item> <!-- 어두운 정도 -->
        <item name="android:windowMinWidthMajor">90%</item>
    </style>
    <style name="ErrorTextStyle">
        <item name="android:textColor">#FF0000</item> <!-- 빨간색 -->
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">55dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

</resources>